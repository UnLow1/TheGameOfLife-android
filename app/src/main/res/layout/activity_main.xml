<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="1100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:columnWidth="40dp"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:numColumns="10"
        android:screenOrientation="portrait"
        android:stretchMode="columnWidth"
        android:verticalSpacing="-8dp" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nextRoundButton"
        android:layout_alignBottom="@+id/nextRoundButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:text="@string/new_game" />

    <Button
        android:id="@+id/nextRoundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/newGameButton"
        android:text="@string/next_round" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nextRoundButton"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/nextRoundButton"
        android:text="@string/round_label" />

    <TextView
        android:id="@+id/roundNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/nextRoundButton"
        android:text="@string/score_label" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/roundNumberTextView" />

</RelativeLayout>